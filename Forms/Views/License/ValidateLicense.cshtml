@{
    ViewData["Title"] = "Validate License";
}


<h2>Liscence Validation</h2>

<!-- Form for the user to enter the license key -->
<form method="get">
    <div class="form-group">
        <label for="liscenceKey">Enter Liscence Key:</label>
        <input type="text" class="form-control" id="liscenceKey" name="liscenceKey" value="" required />
    </div>
    <button type="submit" class="btn btn-primary">Validate</button>
</form>

<!-- Display message if available -->
@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">
        <strong>Message: </strong> @ViewBag.Message
    </div>

    <!-- If the company name and validity dates are provided, display them -->
    @if (ViewBag.CompanyName != null)
    {
        <div class="mt-3">
            <p><strong>Company Name:</strong> @ViewBag.CompanyName</p>
            <p><strong>Valid From:</strong> @ViewBag.ValidFrom</p>
            <p><strong>Valid To:</strong> @ViewBag.ValidTo</p>
        </div>
    }
}

