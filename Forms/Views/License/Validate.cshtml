@{
    ViewData["Title"] = "License Validation";
}

<h2>License Validation</h2>

<!-- Form for License Key -->
<form method="post" asp-action="ValidateLicense">
    <div class="form-group">
        <label for="licenceKey">Enter License Key:</label>
        <input type="text" id="licenceKey" name="licenceKey" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Validate</button>
</form>

<!-- Display success or error message -->
@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">
        <strong>Success:</strong> @ViewBag.Message
        <p>Company Name: @ViewBag.CompanyName</p>
        <p>Valid From: @ViewBag.ValidFrom</p>
        <p>Valid To: @ViewBag.ValidTo</p>
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        <strong>Error:</strong> @ViewBag.ErrorMessage
    </div>
}
