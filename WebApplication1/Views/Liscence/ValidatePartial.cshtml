@{
    ViewBag.Title = "Home Page";
}

@* The message below helps the user understand where they are and what the page does. *@
<h2>License Validation</h2>

@* Form to input the license key *@
<form method="post" action="@Url.Action("ValidateLicense", "Home")">
    <div class="form-group">
        <label for="licenseKey">Enter License Key:</label>
        <input type="text" id="licenseKey" name="licenseKey" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Validate License</button>
</form>

@* Display the result of the validation *@
@if (ViewBag.Result != null)
{
    <div class="alert alert-info mt-3">
        <strong>Validation Result:</strong>
        <p>@ViewBag.Result</p>
    </div>
}
